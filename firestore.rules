rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function role() {
      return userDoc().data.role;
    }

    function schoolId() {
      return userDoc().data.schoolId;
    }

    function isAdmin() {
      return role() == "admin";
    }

    function isTeacher() {
      return role() == "teacher";
    }

    function isParent() {
      return role() == "parent";
    }

    /* USERS */
    match /users/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow create: if isSignedIn();
      allow update: if false;
    }

    /* SCHOOLS */
    match /schools/{schoolId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && isAdmin();
    }

    /* CLASSES */
    match /classes/{classId} {
      // Create/Delete: Admin only
      // Update: Admin (general) OR Teacher (linking their own UID during onboarding)
      allow create, delete: if isSignedIn() && isAdmin() && request.resource.data.schoolId == schoolId();
      
      allow update: if isSignedIn() && (
        (isAdmin() && request.resource.data.schoolId == schoolId()) ||
        (isTeacher() && request.resource.data.classTeacherId == request.auth.uid)
      );

      allow read: if isSignedIn() && (resource == null || resource.data.schoolId == schoolId());
    }

    /* STUDENTS */
    match /students/{studentId} {
      allow create, delete: if isSignedIn() && isAdmin() && request.resource.data.schoolId == schoolId();
      
      allow update: if isSignedIn() && (
        (isAdmin() && request.resource.data.schoolId == schoolId()) ||
        (isParent() && request.resource.data.parentUid == request.auth.uid)
      );

      allow read: if isSignedIn() && (
        (isAdmin() && (resource == null || resource.data.schoolId == schoolId())) ||
        (isTeacher() && (resource == null || resource.data.schoolId == schoolId())) ||
        (isParent() && (resource == null || resource.data.parentEmail == request.auth.token.email))
      );
    }

    /* SYLLABUS, UPDATES, ANNOUNCEMENTS */
    match /syllabus/{id} {
      allow read: if isSignedIn() && (resource == null || resource.data.schoolId == schoolId());
      allow write: if isSignedIn() && (isAdmin() || isTeacher()) && request.resource.data.schoolId == schoolId();
    }

    match /weeklyUpdates/{id} {
      allow read: if isSignedIn() && (resource == null || resource.data.schoolId == schoolId());
      allow write: if isSignedIn() && isTeacher() && request.resource.data.schoolId == schoolId();
    }
    
    match /announcements/{id} {
      allow read: if isSignedIn() && (resource == null || resource.data.schoolId == schoolId());
      allow write: if isSignedIn() && (isAdmin() || isTeacher()) && request.resource.data.schoolId == schoolId();
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
