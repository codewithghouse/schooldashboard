rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isAdmin() {
      return isSignedIn() && userDoc().data.role == "admin";
    }

    function schoolId() {
      return userDoc().data.schoolId;
    }

    /* USERS — ADMIN OVERRIDE */
    match /users/{uid} {
      allow read: if isSignedIn() && (request.auth.uid == uid || isAdmin());
      allow create, update: if isSignedIn() && (request.auth.uid == uid || isAdmin());
      allow list: if isSignedIn() && isAdmin(); 
      allow delete: if false;
    }

    /* SCHOOLS */
    match /schools/{id} {
      // Relax create permission to allow first-time school registration
      allow create: if isSignedIn();
      allow read, write: if isSignedIn() && (isAdmin() || resource.data.adminUid == request.auth.uid);
    }

    /* CLASSES — FINAL FIX for ERR-02 */
    match /classes/{classId} {
      // Admin can READ ALL classes (Bypass complex list checks)
      allow list, get: if isSignedIn() && isAdmin();

      // Admin can create/update/delete
      allow create, update, delete: if isSignedIn() && isAdmin();
      
      // Teacher Read/Update access
      allow read, update: if isSignedIn() && userDoc().data.role == "teacher";
    }

    /* TEACHERS — FINAL FIX */
    match /teachers/{uid} {
      allow read, write: if isSignedIn() && isAdmin();
      allow read, update: if isSignedIn() && request.auth.uid == uid;
    }

    /* STUDENTS — FINAL FIX */
    match /students/{id} {
      // Admin Full Access
      allow read, write: if isSignedIn() && isAdmin();
      
      // Teacher Access (Read/Write for their school)
      allow read, write: if isSignedIn() && (userDoc().data.role == "teacher" && userDoc().data.schoolId == resource.data.schoolId);
      allow create: if isSignedIn() && userDoc().data.role == "teacher"; // Allow teacher to enroll students

      // Parent Access (Read ONLY their child)
      allow read: if isSignedIn() && (userDoc().data.role == "parent" && resource.data.parentUid == request.auth.uid);
    }

    /* INVITES — FINAL FIX */
    match /invites/{inviteId} {
      allow create: if isSignedIn() && (isAdmin() || userDoc().data.role == "teacher");
      allow read, list: if isSignedIn() && (isAdmin() || (userDoc().data.role == "teacher" && (resource == null || resource.data.schoolId == userDoc().data.schoolId)));
      allow update, delete: if isSignedIn() && isAdmin();
    }

    /* TICKETS — SUPPORT SYSTEM */
    match /tickets/{ticketId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid || (userDoc().data.role == "teacher" && resource.data.schoolId == userDoc().data.schoolId));
      allow update: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
      allow delete: if false;
    }

    /* ACADEMIC DATA — FINAL FIX */
    match /syllabus/{id} { allow read, write: if isSignedIn() && (isAdmin() || userDoc().data.role == "teacher"); }
    match /weeklyUpdates/{id} { allow read, write: if isSignedIn() && (isAdmin() || userDoc().data.role == "teacher"); }
    match /announcements/{id} { allow read, write: if isSignedIn() && (isAdmin() || userDoc().data.role == "teacher"); }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
