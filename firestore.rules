rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function role() {
      return userDoc().data.role;
    }

    function userSchoolId() {
      return userDoc().data.schoolId;
    }

    function isAdmin() {
      return isSignedIn() && role() == "admin";
    }

    function isTeacher() {
      return isSignedIn() && role() == "teacher";
    }

    function isParent() {
      return isSignedIn() && role() == "parent";
    }

    /* USERS */
    match /users/{uid} {
      allow read, create: if isSignedIn() && request.auth.uid == uid;
      allow update: if isSignedIn() && request.auth.uid == uid;
      allow delete: if false;
    }

    /* SCHOOLS */
    match /schools/{schoolId} {
      allow create: if isSignedIn() && isAdmin();
      allow read: if isSignedIn();
      allow update, delete: if isSignedIn() && isAdmin() && resource.data.adminUid == request.auth.uid;
    }

    /* CLASSES */
    match /classes/{classId} {
      allow create: if isSignedIn() && isAdmin() && request.resource.data.schoolId == userSchoolId();
      
      // List rules for Admin/Teacher
      allow list: if isSignedIn() && (
        (isAdmin() && request.query.where("schoolId", "==", userSchoolId())) ||
        (isTeacher() && request.query.where("classTeacherId", "==", request.auth.uid))
      );
      
      allow get: if isSignedIn() && (
        (isAdmin() && resource.data.schoolId == userSchoolId()) ||
        (isTeacher() && (resource.data.schoolId == userSchoolId() || resource.data.classTeacherId == request.auth.uid))
      );

      allow update: if isSignedIn() && (
        (isAdmin() && request.resource.data.schoolId == userSchoolId()) ||
        (isTeacher() && resource.data.schoolId == userSchoolId() && (resource.data.classTeacherId == null || resource.data.classTeacherId == request.auth.uid))
      );

      allow delete: if isAdmin() && resource.data.schoolId == userSchoolId();
    }

    /* STUDENTS */
    match /students/{studentId} {
      allow create: if isSignedIn() && isAdmin() && request.resource.data.schoolId == userSchoolId();
      
      allow list: if isSignedIn() && (
        (isAdmin() && request.query.where("schoolId", "==", userSchoolId())) ||
        (isTeacher() && request.query.where("schoolId", "==", userSchoolId())) ||
        (isParent() && request.query.where("parentEmail", "==", request.auth.token.email))
      );

      allow get: if isSignedIn() && (
        (isAdmin() && resource.data.schoolId == userSchoolId()) ||
        (isTeacher() && resource.data.schoolId == userSchoolId()) ||
        (isParent() && resource.data.parentEmail == request.auth.token.email)
      );

      allow update: if isSignedIn() && (
        (isAdmin() && request.resource.data.schoolId == userSchoolId()) ||
        (isParent() && resource.data.parentEmail == request.auth.token.email)
      );

      allow delete: if isAdmin() && resource.data.schoolId == userSchoolId();
    }

    /* INVITES */
    match /invites/{inviteId} {
      allow create: if isSignedIn() && isAdmin() && request.resource.data.schoolId == userSchoolId();
      allow read: if isSignedIn() && isAdmin() && resource.data.schoolId == userSchoolId();
      allow update, delete: if false;
    }

    /* TEACHERS PROFILE */
    match /teachers/{uid} {
      allow create: if isSignedIn() && request.auth.uid == uid;
      allow list: if isSignedIn() && isAdmin() && request.query.where("schoolId", "==", userSchoolId());
      allow get: if isSignedIn() && (
        (isAdmin() && resource.data.schoolId == userSchoolId()) || 
        (request.auth.uid == uid)
      );
      allow update: if request.auth.uid == uid;
    }

    /* ACADEMIC DATA */
    match /syllabus/{id} {
      allow list: if isSignedIn() && request.query.where("schoolId", "==", userSchoolId());
      allow get: if isSignedIn() && resource.data.schoolId == userSchoolId();
      allow create, update, delete: if isSignedIn() && (isAdmin() || isTeacher()) && request.resource.data.schoolId == userSchoolId();
    }

    match /weeklyUpdates/{id} {
      allow list: if isSignedIn() && request.query.where("schoolId", "==", userSchoolId());
      allow get: if isSignedIn() && resource.data.schoolId == userSchoolId();
      allow create, update, delete: if isSignedIn() && isTeacher() && request.resource.data.schoolId == userSchoolId();
    }

    match /announcements/{id} {
      allow list: if isSignedIn() && request.query.where("schoolId", "==", userSchoolId());
      allow get: if isSignedIn() && resource.data.schoolId == userSchoolId();
      allow create, update, delete: if isSignedIn() && (isAdmin() || isTeacher()) && request.resource.data.schoolId == userSchoolId();
    }

    match /aiContent/{id} {
      allow read, write: if isSignedIn() && isTeacher();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
