rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isAdmin() {
      return isSignedIn() && userDoc().data.role == "admin";
    }

    /* USERS */
    match /users/{uid} {
      allow read, create: if isSignedIn() && request.auth.uid == uid;
      // REQUIRED for schoolId linking after creation
      allow update: if isSignedIn() && request.auth.uid == uid;
      allow delete: if false;
    }

    /* ACADEMIC COLLECTIONS â€” WIDE ADMIN ACCESS */
    // To resolve persistent LIST rule reliability issues, admins are granted 
    // broad access. Isolation is handled at the query level in the frontend.
    
    match /schools/{id} {
      allow read, write: if isSignedIn() && isAdmin();
    }

    match /classes/{id} {
      allow read, write: if isSignedIn() && isAdmin();
      // Allow Teachers to read/update their specific classes
      allow read, update: if isSignedIn() && userDoc().data.role == "teacher";
    }

    match /students/{id} {
      allow read, write: if isSignedIn() && isAdmin();
    }

    match /teachers/{id} {
      allow read, write: if isSignedIn() && isAdmin();
    }

    match /invites/{id} {
      allow create: if isSignedIn() && isAdmin();
      allow read, update, delete: if false;
    }

    /* ACADEMIC DATA */
    match /syllabus/{id} { allow read, write: if isSignedIn() && (isAdmin() || userDoc().data.role == "teacher"); }
    match /weeklyUpdates/{id} { allow read, write: if isSignedIn() && (isAdmin() || userDoc().data.role == "teacher"); }
    match /announcements/{id} { allow read, write: if isSignedIn() && (isAdmin() || userDoc().data.role == "teacher"); }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
