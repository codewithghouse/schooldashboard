rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function role() {
      return userDoc().data.role;
    }

    function schoolId() {
      return userDoc().data.schoolId;
    }

    function isAdmin() {
      return isSignedIn() && role() == "admin";
    }

    function isTeacher() {
      return isSignedIn() && role() == "teacher";
    }

    function isParent() {
      return isSignedIn() && role() == "parent";
    }

    /* USERS */
    match /users/{uid} {
      allow read, create: if isSignedIn() && request.auth.uid == uid;
      // REQUIRED for schoolId linking after creation
      allow update: if isSignedIn() && request.auth.uid == uid;
      allow delete: if false;
    }

    /* SCHOOLS — onboarding safe */
    match /schools/{schoolId} {
      allow create: if isSignedIn()
        && isAdmin()
        && (
          !("schoolId" in userDoc().data) ||
          userDoc().data.schoolId == null
        );

      allow read: if isSignedIn();
      allow update, delete: if isSignedIn()
        && isAdmin()
        && resource.data.adminUid == request.auth.uid;
    }

    /* CLASSES — LIST SAFE */
    match /classes/{classId} {
      allow create: if isSignedIn()
        && isAdmin()
        && request.resource.data.schoolId == schoolId();

      allow get: if isSignedIn()
        && resource.data.schoolId == schoolId();

      allow list: if isSignedIn()
        && request.query.where("schoolId", "==", schoolId());

      allow update: if isSignedIn() && (
        (isAdmin() && request.resource.data.schoolId == schoolId()) ||
        (isTeacher() && request.resource.data.schoolId == schoolId() && (resource.data.classTeacherId == null || resource.data.classTeacherId == request.auth.uid))
      );

      allow delete: if isAdmin();
    }

    /* STUDENTS — LIST SAFE */
    match /students/{studentId} {
      allow create: if isSignedIn() && isAdmin() && request.resource.data.schoolId == schoolId();
      
      allow get: if isSignedIn() && (
        (isAdmin() && resource.data.schoolId == schoolId()) ||
        (isTeacher() && resource.data.schoolId == schoolId()) ||
        (isParent() && resource.data.parentEmail == request.auth.token.email)
      );

      allow list: if isSignedIn() && (
        (isAdmin() && request.query.where("schoolId", "==", schoolId())) ||
        (isTeacher() && request.query.where("schoolId", "==", schoolId())) ||
        (isParent() && request.query.where("parentEmail", "==", request.auth.token.email))
      );

      allow update: if isSignedIn() && (
        (isAdmin() && request.resource.data.schoolId == schoolId()) ||
        (isParent() && resource.data.parentEmail == request.auth.token.email)
      );

      allow delete: if isAdmin();
    }

    /* INVITES — WRITE ONLY */
    match /invites/{inviteId} {
      allow create: if isSignedIn()
        && isAdmin()
        && request.resource.data.schoolId == schoolId();

      allow read, update, delete: if false;
    }

    /* TEACHERS PROFILE */
    match /teachers/{uid} {
      allow create: if isSignedIn() && request.auth.uid == uid;
      allow get: if isSignedIn()
        && (request.auth.uid == uid || (isAdmin() && resource.data.schoolId == schoolId()));
      allow list: if isAdmin();
      allow update: if request.auth.uid == uid;
    }

    /* ACADEMIC DATA (LIST-SAFE) */
    match /syllabus/{id} {
      allow create, update, delete: if isSignedIn() && (isAdmin() || isTeacher()) && request.resource.data.schoolId == schoolId();
      allow get: if isSignedIn() && resource.data.schoolId == schoolId();
      allow list: if isSignedIn() && request.query.where("schoolId", "==", schoolId());
    }

    match /weeklyUpdates/{id} {
      allow create, update, delete: if isSignedIn() && isTeacher() && request.resource.data.schoolId == schoolId();
      allow get: if isSignedIn() && resource.data.schoolId == schoolId();
      allow list: if isSignedIn() && request.query.where("schoolId", "==", schoolId());
    }

    match /announcements/{id} {
      allow create, update, delete: if isSignedIn() && (isAdmin() || isTeacher()) && request.resource.data.schoolId == schoolId();
      allow get: if isSignedIn() && resource.data.schoolId == schoolId();
      allow list: if isSignedIn() && request.query.where("schoolId", "==", schoolId());
    }

    match /aiContent/{id} {
        allow read, write: if isSignedIn() && isTeacher();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
