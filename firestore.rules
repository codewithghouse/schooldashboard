rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isAdmin() {
      return isSignedIn() && userDoc().data.role == "admin";
    }

    function schoolId() {
      return userDoc().data.schoolId;
    }

    /* USERS */
    match /users/{uid} {
      allow read, create: if isSignedIn() && request.auth.uid == uid;
      allow update: if isSignedIn() && request.auth.uid == uid; // REQUIRED for schoolId linking
      allow delete: if false;
    }

    /* SCHOOLS */
    match /schools/{id} {
      // Relax create permission to allow first-time school registration
      allow create: if isSignedIn();
      allow read, write: if isSignedIn() && (isAdmin() || resource.data.adminUid == request.auth.uid);
    }

    /* CLASSES — FINAL FIX for ERR-02 */
    match /classes/{classId} {
      // Admin can READ ALL classes (Bypass complex list checks)
      allow list, get: if isSignedIn() && isAdmin();

      // Admin can create/update/delete
      allow create, update, delete: if isSignedIn() && isAdmin();
      
      // Teacher Read/Update access
      allow read, update: if isSignedIn() && userDoc().data.role == "teacher";
    }

    /* TEACHERS — FINAL FIX */
    match /teachers/{uid} {
      allow read, write: if isSignedIn() && isAdmin();
      allow read, update: if isSignedIn() && request.auth.uid == uid;
    }

    /* STUDENTS — FINAL FIX */
    match /students/{id} {
      allow read, write: if isSignedIn() && isAdmin();
    }

    /* INVITES — FINAL FIX */
    match /invites/{inviteId} {
      allow create: if isSignedIn() && isAdmin();
      allow read, update, delete: if false;
    }

    /* ACADEMIC DATA — FINAL FIX */
    match /syllabus/{id} { allow read, write: if isSignedIn() && (isAdmin() || userDoc().data.role == "teacher"); }
    match /weeklyUpdates/{id} { allow read, write: if isSignedIn() && (isAdmin() || userDoc().data.role == "teacher"); }
    match /announcements/{id} { allow read, write: if isSignedIn() && (isAdmin() || userDoc().data.role == "teacher"); }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
